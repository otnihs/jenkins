pipeline {
    agent any
  
stages {
    stage('Clone sources') {
    steps {
        git branch: 'development', url: 'https://github.com/otnihs/jenkins.git'
    }
    }

    stage('Building images') {
    steps {
        sh "echo ${Version}"
        sh "sudo docker build ./ otnihs/nginx-${env.Version}"
        sh "sudo docker push otnihs/nginx-${env.Version}"
        }
    }

    stage('Updating kubernetes yaml files version') {
    steps {
    sh '''
           sed -i -e 's/{version}/${env.Version}/g' ng-pod-new.yml
          '''
        }
    }

    stage('Deploying images') {
    steps {
       sh 'sudo kubectl apply -f ng-pod-new.yml'
        
       sh 'sudo kubectl apply -f ng-service.yml'
    }
    }
}
}
