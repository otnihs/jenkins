pipeline {
    agent any
    stages {
withEnv(['NEW_BUILDS_ALL_TIME=${NEW_BUILDS_ALL_TIME}']) {
    def Version = VersionNumber projectStartDate: '2019-09-22', versionNumberString: '${BUILD_DAY}${BUILDS_TODAY}', versionPrefix: 'v', worstResultForIncrement: 'FAILURE';
}
stages {
    stage('Clone sources') {
    steps {
        git branch: 'development', url: 'https://github.com/otnihs/jenkins.git'
    }
    }

    stage('Building images') {
    steps {
        sudo docker build . -t otnihs/nginx:${Version}
        sudo docker push otnihs/nginx:${Version}
        }
    }

    stage('Updating kubernetes yaml files version') {
    steps {
        sed -i 's/{version}/${Version}/g' ng-pod-new.yml
        }
    }

    stage('Deploying images') {
    steps {
        sudo kubectl apply -f ng-pod-new.yml
        
       sudo kubectl apply -f ng-service.yml
    }
    }
}
}
