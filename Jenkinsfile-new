pipeline {
    agent any
  
stages {
    stage('Clone sources') {
    steps {
        git branch: 'development', url: 'https://github.com/otnihs/jenkins.git'
    }
    }

    stage('Building images') {
    steps {
        echo "${env.Version}"
        sudo docker build ./ otnihs/nginx:"${env.Version}"
        sudo docker push otnihs/nginx:"${env.Version}"
        }
    }

    stage('Updating kubernetes yaml files version') {
    steps {
        sed -i 's/{version}/${env.Version}/g' ng-pod-new.yml
        }
    }

    stage('Deploying images') {
    steps {
        sudo kubectl apply -f ng-pod-new.yml
        
       sudo kubectl apply -f ng-service.yml
    }
    }
}
}
